<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="shoppingflux.export" path="/admin/module/ShoppingFlux/export" methods="post">
        <default key="_controller">ShoppingFlux\Controller\SaveExportController::saveOrExport</default>
    </route>

    <route id="shoppingflux.update.feed" path="/admin/module/ShoppingFlux/updateFeed" methods="post">
        <default key="_controller">ShoppingFlux\Controller\SaveExportController::updateFeedUrl</default>
    </route>

    <route id="shoppingflux.getorders" path="/admin/module/ShoppingFlux/GetOrders">
        <default key="_controller">ShoppingFlux\Controller\GetOrdersController::getOrders</default>
    </route>

    <route id="shoppingflux.show.image" path="/shoppingflux/image/{imageId}">
        <default key="_controller">ShoppingFlux\Controller\ShowImageController::getImage</default>
        <requirement key="imageId">\d+</requirement>
    </route>

    <route id="shoppingflux.get.export" path="/shoppingflux/export">
        <default key="_controller">ShoppingFlux\Controller\GetExportController::getExport</default>
    </route>
</routes>
